<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <!-- Custom CSS -->

    <link rel="stylesheet" href="/css/index.css" type="text/css">
    <title>Index</title>
  </head>

  <body>
    <div id="contenedor-pagina">
      <nav id="navbar">
          <div class="container-fluid">
            <div class="row">
              <div class="col-3 col-navbar">
                <H1>LOGO</H1>
              </div>
              <div class="col-2 col-navbar">
                <a href="#">inicio</a>
              </div>
              <div class="col-2 col-navbar">
                <a href="#">emprendimientos</a>
              </div>
              <div class="col-3 col-navbar">
                <a href="/registro">quiero promocionar mi emprendimiento</a>
              </div>
              <div class="col-2 col-navbar">
                <div id="iniciar-sesion-buttom">
                  <a href="/login">Iniciar Sesion</a>
                </div>
              </div>
            </div>
          </div>
      </nav>

      <div id="bienvenido" class="container-fluid">

          <h2>bienvenido a la sección de emprendimientos</h2>
            <form action="#" method="post" target="_blank">
              <input id="buscar" type="search" name="busquedaPyme" placeholder="Buscar pyme">
              <input id="buscar-buttom" type="submit" value="Buscar">
            </form>
      </div>
      
      <div id="categorias" class="container-fluid">

          <!-- <h2>Categorías de emprendimientos</h2>
          <p>busque la categoría de su emprendimiento</p> -->
        
        <div class="row rowCategorias">
          <% for(var i = 0; i < datos2.length; i++){ %>
          <div class="col-1"><a href="#"><div class="categoria"></div></a><p><%= datos2[i].categorias %></p></div>
          <% } %>
        </div>

        </div>
        
      </div>
      
      <div id="emprendimientos-locales">
        <h2>Emprendimientos locales</h2>
        <% for(var i = 0; i < datos1.length; i++){ %>
        <div class="row">
          <div class="col-1 col-emprendimientos-locales">
            <img src="../views/img/usuario.png" height="80px" width="80px">
          </div>
          <div class="col-2 col-emprendimientos-locales">
            <a href="/registro"><%= datos1[i].Nombre_pyme %></a>
            <p>categoria</p>
          </div>
          <div class="col-9 col-emprendimientos-locales">
            <p><%= datos1[i].Descripcion %></p>
          </div>
        </div>
        <% } %>
      </div>
  </div>
      
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
  </body>
</html>


